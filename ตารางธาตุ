      <div id="popup" class="popup">
         <h3 id="element-name"></h3>
         <p><strong>Symbol:</strong> <span id="element-symbol"></span></p>
         <p><strong>Atomic Number:</strong> <span id="atomic-number"></span></p>
         <p><strong>Properties:</strong> <span id="element-properties"></span></p>
         <p><strong>Orbital:</strong> <span id="element-orbital"></span></p>
         <button class="close-btn" onclick="closePopup()">Close</button>
     </div>
     
      <div id="popup-overlay" class="popup-overlay" style="display: none;" onclick="closePopup()"></div>
      <div class="legend">
         <div class="metal-legend">Metal <span>Green</span></div>
         <div class="non-metal-legend">Non-metal <span>Red</span></div>
         <div class="transition-metal-legend">Transition Metal <span>Yellow</span></div>
         <div class="noble-gas-legend">Noble Gas <span>Blue</span></div>
